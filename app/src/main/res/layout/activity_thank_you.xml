<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ThankYouActivity">

    <TextView
        android:id="@+id/TopText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="40dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/thankyou_thankyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopText"
        android:layout_centerInParent="true"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:paddingTop="100sp"
        android:text="THANK YOU\nFOR\nSHOPPING AT\nI HATE UGLY"
        android:textSize="40sp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/thankyou_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thankyou_thankyou"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:paddingTop="100sp"
        android:paddingRight="10sp"
        android:text="WE KEEP YOUR CREDIT CARD DETAILS\n AND DON'T ENCRYPT THEM"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/thankyou_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thankyou_return"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:text="NO REFUNDS"
        android:textSize="10sp" />

    <androidx.fragment.app.FragmentContainerView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_container_view"
        android:name="com.example.clothingapp.fragments.NavigationBar"
        />

</RelativeLayout>



